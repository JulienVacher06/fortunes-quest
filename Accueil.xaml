<UserControl
    x:Class="SAE.Accueil"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Canvas>
        <Button
            x:Name="btn_Jouer"
            Canvas.Left="482"
            Canvas.Top="257"
            Width="316"
            Height="103"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFDADADA"
            BorderThickness="0,0,0,0"
            Click="btn_Jouer_Click"
            Content="Jouer"
            Cursor="Hand"
            FontFamily="Lucida Calligraphy"
            FontSize="40"
            Foreground="Black" />
        <Button
            x:Name="btn_Parametre"
            Canvas.Left="482"
            Canvas.Top="417"
            Width="316"
            Height="102"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFDADADA"
            BorderThickness="0,0,0,0"
            Click="btn_parametre_click"
            Content="Paramètres"
            Cursor="Hand"
            FontFamily="Lucida Calligraphy"
            FontSize="40"
            Foreground="Black" />
        <Button
            x:Name="btn_but_Jeu"
            Canvas.Left="482"
            Canvas.Top="578"
            Width="316"
            Height="104"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFDADADA"
            BorderThickness="0,0,0,0"
            Click="btn_but_Jeu_Click"
            Content="But du jeu"
            Cursor="Hand"
            FontFamily="Lucida Calligraphy"
            FontSize="40"
            Foreground="Black" />
        <Image
            Width="1280"
            Height="800"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Panel.ZIndex="-1"
            Source="/images/Fond/Page Accueil.png"
            Stretch="Fill" />
    </Canvas>
</UserControl>
