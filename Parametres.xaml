<UserControl
    x:Class="SAE.Parametres"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="parametres"
    d:DesignHeight="800"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Canvas x:Name="Canvas_parametre">

        <Button
            x:Name="btn_touches"
            Canvas.Left="482"
            Canvas.Top="497"
            Width="316"
            Height="103"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderThickness="0,0,0,0"
            Click="btn_Parametres_Touches"
            Content="Touches"
            Cursor="Hand"
            FontFamily="Lucida Calligraphy"
            FontSize="40" Background="{x:Null}" Foreground="#FFFFFDFD" />
        <Image
            Width="1280"
            Height="800"
            Panel.ZIndex="-1"
            Source="/images/Fond/imgparametres.png"
            Stretch="Fill" />
        <Button
            x:Name="RetourParametre"
            Width="316"
            Height="103"
            BorderThickness="0,0,0,0"
            Click="RetourParametre_click"
            Content="Retour"
            Cursor="Hand"
            FontFamily="Lucida Calligraphy"
            FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Background="{x:Null}" />
        <Slider x:Name="Parametre_Volume" Canvas.Left="482" Canvas.Top="304" Width="336" Height="19" Value="5" ValueChanged="Changement_Valeur"/>
        <TextBlock Canvas.Left="310" TextWrapping="Wrap" Text="Son :" Canvas.Top="286" FontFamily="Lucida Calligraphy" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Center" Width="135" Padding="15,0,0,0" Foreground="#FFFFF9F9"/>

    </Canvas>
</UserControl>
