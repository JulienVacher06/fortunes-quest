<UserControl
    x:Class="SAE.Victoire"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Canvas>
        <Image
            Width="1280"
            Height="800"
            Source="/images/Fond/lvl5_FinDuJeu.png"
            Stretch="Fill" />
        <Image
            x:Name="tresor_img"
            Canvas.Left="584"
            Canvas.Top="482"
            Width="112"
            Height="120"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/images/tresor/tresor_de_kelloggs.png"
            Stretch="Fill" />
        <TextBlock
            x:Name="TB_gagne"
            Canvas.Left="522"
            Canvas.Top="61"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontFamily="Lucida Calligraphy"
            FontSize="48"
            Foreground="White"
            Text="Victoire !"
            TextAlignment="Center" />
        <TextBlock
            x:Name="TB_felicitation"
            Canvas.Left="296"
            Canvas.Top="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontFamily="Lucida Calligraphy"
            FontSize="20"
            Foreground="White"
            TextAlignment="Center"><Run Text="félicitations ! Vous avez trouvez le mythique trésor de Kellogg's !" /><LineBreak /><Run Text=" c'est la victoire pour vous !" /></TextBlock>
        <Button
            x:Name="B_retourvictoire"
            Canvas.Left="475"
            Canvas.Top="634"
            Background="#FF060000"
            BorderBrush="#FF707070"
            Click="B_retourvictoire_Click"
            Content="retour au menu principal"
            FontFamily="Lucida Calligraphy"
            FontSize="24"
            Foreground="White" />
    </Canvas>
</UserControl>
